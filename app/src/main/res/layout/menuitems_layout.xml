<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menuImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/menuNameTv"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/menuImg"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="25dp"
        android:layout_toEndOf="@+id/menuImg"
        android:layout_toRightOf="@+id/menuImg"
        android:textColorHighlight="@color/design_default_color_primary"
        android:text="Order Id" />

    <TextView
        android:id="@+id/menuFromTv"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/menuNameTv"
        android:layout_alignLeft="@+id/menuNameTv"
        android:layout_below="@+id/menuNameTv"
        android:layout_marginTop="15dp"
        android:text="From" />

    <TextView
        android:id="@+id/menuToTv"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/menuNameTv"
        android:layout_alignLeft="@+id/menuNameTv"
        android:layout_below="@+id/menuFromTv"
        android:layout_marginTop="15dp"
        android:text="To" />

</RelativeLayout>

